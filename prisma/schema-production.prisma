// Схема базы данных для PyLearn (PRODUCTION)
// Используйте этот файл для деплоя на Vercel/Netlify/Railway

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"  // Изменено с sqlite на postgresql для продакшена
  url      = env("DATABASE_URL")
}

// Модель пользователя
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String?   // Хешированный пароль (опционально, если только Google OAuth)
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Связи
  accounts      Account[]
  sessions      Session[]
  progress      LessonProgress[]
  completedExercises CompletedExercise[]
  otpCodes      OtpCode[]
  
  @@map("users")
}

// Google OAuth аккаунты
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([provider, providerAccountId])
  @@map("accounts")
}

// Сессии пользователей
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("sessions")
}

// OTP коды для верификации email
model OtpCode {
  id        String   @id @default(cuid())
  userId    String
  code      String
  email     String
  expiresAt DateTime
  verified  Boolean  @default(false)
  createdAt DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("otp_codes")
}

// Прогресс по урокам
model LessonProgress {
  id          String   @id @default(cuid())
  userId      String
  lessonId    Int
  topicId     String
  completed   Boolean  @default(false)
  completedAt DateTime?
  createdAt   DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, lessonId, topicId])
  @@map("lesson_progress")
}

// Выполненные упражнения
model CompletedExercise {
  id          String   @id @default(cuid())
  userId      String
  exerciseId  Int
  code        String   // Код решения
  passed      Boolean  @default(false)
  attempts    Int      @default(1)
  completedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, exerciseId])
  @@map("completed_exercises")
}

// Токены для верификации email
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  
  @@unique([identifier, token])
  @@map("verification_tokens")
}

